<h1> Update Article </h1>

<form method="POST" action="/article/update?_method=PUT">

  <div>
    <label>Title</label>
    <input type="text" name="title" value="<%= article.title %>" />
  </div>

  <div>
    <label>Content</label>
    <textarea name="content"><%= article.content %></textarea>
  </div>

  <div>
    <label>Is Published</label>
    <input type="text" name="isPublished" value="<%= article.isPublished %>" />
  </div>

  <div>
    <label>Total Words</label>
    <input type="number" name="totalWords" value="<%= article.totalWords %>" />
  </div>

  <div>
    <label>Author</label>
    <input type="text" name="author" value="<%= article.author %>" />
  </div>

  <input type="hidden" name="id" value="<%= article._id %>" />
  <div>
    <button type="submit">Update Article</button>
  </div>

</form>